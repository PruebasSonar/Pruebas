<!-- Attachments Manager -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // AttachmentMedicion: set elements in variables;
        const attachmentMedicionInput = document.getElementById('AttachmentMedicionInput');
        const attachmentMedicionName = document.getElementById('AttachmentMedicion');
        const attachmentMedicionButton = document.getElementById('AttachmentMedicionButton');

        // AttachmentOrden: set elements in variables;
        const attachmentOrdenInput = document.getElementById('AttachmentOrdenInput');
        const attachmentOrdenName = document.getElementById('AttachmentOrden');
        const attachmentOrdenButton = document.getElementById('AttachmentOrdenButton');


        // AttachmentMedicion: display file name when selected;
        if (attachmentMedicionInput != null)
            attachmentMedicionInput.addEventListener('change', function () {
                attachmentMedicionName.value = attachmentMedicionInput.files[0].name;
                attachmentMedicionButton.textContent = (attachmentMedicionName.textContent != null) ? "Cambiar Archivo" :  "Cargar Archivo";
            });

        // AttachmentOrden: display file name when selected;
        if (attachmentOrdenInput != null)
            attachmentOrdenInput.addEventListener('change', function () {
                attachmentOrdenName.value = attachmentOrdenInput.files[0].name;
                attachmentOrdenButton.textContent = (attachmentOrdenName.textContent != null) ? "Cambiar Archivo" :  "Cargar Archivo";
            });

    });
</script>
