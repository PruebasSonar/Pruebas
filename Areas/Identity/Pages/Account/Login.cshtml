@page
@model LoginModel

@{
    ViewBag.LoginIn = true;
    ViewBag.NoContainer = true;
        ViewBag.NoTitle = true;
}


<!--FORMULARIO INGRESO-->
<section class="section login">
    <div class="container">

        <div class="row justify-content-center align-content-center">
            <!--- USUARIO REGRISTRADO --->
                                <!-- remover la clase d-none para visualizar el primer formulario-->
            <div class="col-lg-4">
                <div class="logo text-center">
                    <img class="lazy logo-ico   " src="~/assets/img/logoEntidad_head.png" alt="Logo ministerio de Obras públicas">
                </div>

                <h1 class="text-center h2">Sistema Municipal de Gestión de Obras y Proyectos</h1>
                <h2>Ingreso</h2>
                <form id="account" method="post" novalidate="novalidate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger field-validation-valid"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger field-validation-valid"></span>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sesión</button>
                    </div>
                    <div class="mt-3">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarme</a>
                        </p>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
